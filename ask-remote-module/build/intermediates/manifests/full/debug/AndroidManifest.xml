<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.androidstarterkit.module"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="14"
        android:targetSdkVersion="25" />

    <uses-permission android:name="android.permission.INTERNET" />

    <meta-data
        android:name="android.support.VERSION"
        android:value="25.3.0" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.androidstarterkit.module.SampleActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.androidstarterkit.module.sample.activity.ScrollViewActivity"
            android:label="ScrollView" />
        <activity
            android:name="com.androidstarterkit.module.sample.activity.GridViewActivity"
            android:label="GridView" />
        <activity
            android:name="com.androidstarterkit.module.sample.activity.RecyclerViewActivity"
            android:label="RecyclerView" />
        <activity
            android:name="com.androidstarterkit.module.sample.activity.ListViewActivity"
            android:label="ListView" />
        <activity
            android:name="com.androidstarterkit.module.sample.activity.SlidingTabActivity"
            android:label="SlidingTabLayout" />
        <activity
            android:name="com.androidstarterkit.module.sample.activity.SlidingIconTabActivity"
            android:label="SlidingIconTabLayout" />
    </application>

</manifest>