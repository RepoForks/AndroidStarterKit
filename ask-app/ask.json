{
  "layoutGroup": [
    {
      "class": "ScrollViewFragment",
      "command": [
        "sv",
        "ScrollView"
      ]
    },
    {
      "class": "RecyclerViewFragment",
      "command": [
        "rv",
        "RecyclerView"
      ]
    },
    {
      "class": "ListViewFragment",
      "command": [
        "lv",
        "ListView"
      ]
    },
    {
      "class": "GridViewFragment",
      "command": [
        "gv",
        "GridView"
      ]
    }
  ],
  "moduleGroup": [
    {
      "name": "Firebase",
      "config_file": [
        "google-services.json"
      ],
      "page": "https://console.firebase.google.com",
      "group_gradle_config": [
        {
          "path": "${root}",
          "file": "build.gradle",
          "snippet": [
            {
              "element": [
                "buildscript",
                "dependencies"
              ],
              "lines": [
                "classpath 'com.google.gms:google-services:3.0.0'"
              ]
            }
          ]
        },
        {
          "path": "${app}",
          "file": "build.gradle",
          "snippet": [
            {
              "element": null,
              "lines": [
                "apply plugin: 'com.google.gms.google-services'"
              ]
            }
          ]
        }
      ],
      "module": [
        {
          "class": [
            "FireBaseAnalytics"
          ],
          "command": [
            "fa",
            "firebaseanalytics"
          ],
          "java_config": [
            {
              "path": "${java}",
              "file": "<main>.java",
              "import": [
                "import com.google.firebase.analytics.FirebaseAnalytics;",
                "import <package>.firebase.analytics.FireBaseAnalytics;"
              ],
              "field": [
                "private FireBaseAnalytics analytics;"
              ],
              "method": [
                {
                  "class": "<main>",
                  "name": "onCreate",
                  "annotation": [
                    "@Override"
                  ],
                  "access_modifier": "protected",
                  "return_type": "void",
                  "parameter": [
                    {
                      "type": "Bundle",
                      "variable": "savedInstanceState"
                    }
                  ],
                  "lines": [
                    "analytics = new FireBaseAnalytics(this, FirebaseAnalytics.getInstance(this));"
                  ]
                },
                {
                  "class": "<main>",
                  "name": "onResume",
                  "annotation": [
                    "@Override"
                  ],
                  "access_modifier": "protected",
                  "return_type": "void",
                  "parameter": [],
                  "lines": [
                    "analytics.recordScreenView(\"Main\");"
                  ]
                },
                {
                  "class": "<main>",
                  "name": "onNavigationItemSelected",
                  "annotation": [
                    "@Override"
                  ],
                  "access_modifier": "public",
                  "return_type": "boolean",
                  "parameter": [
                    {
                      "type": "MenuItem",
                      "variable": "item"
                    }
                  ],
                  "lines": [
                    "if (item.getItemId() == R.id.nav_analytics) {",
                    "  Bundle bundle = new Bundle();",
                    "  bundle.putString(\"user_name\", \"kimkevin\");",
                    "  analytics.trackEvent(bundle);",
                    "  analytics.setUserProperty(\"API \" + android.os.Build.VERSION.SDK_INT);",
                    "}"
                  ]
                }
              ]
            }
          ],
          "gradle_config": [
            {
              "path": "${app}",
              "file": "build.gradle",
              "snippet": [
                {
                  "element": [
                    "dependencies"
                  ],
                  "lines": [
                    "compile 'com.google.firebase:firebase-core:10.0.1'"
                  ]
                }
              ]
            }
          ]
        },
        {
          "class": [
            "FireBaseCrashReport"
          ],
          "command": [
            "fc",
            "firebasecrashreporting"
          ],
          "java_config": [
            {
              "path": "${java}",
              "file": "<main>.java",
              "import": [
                "import <package>.firebase.crash.FireBaseCrashReport;"
              ],
              "field": [
                "private FireBaseCrashReport crashReport;"
              ],
              "method": [
                {
                  "class": "<main>",
                  "name": "onCreate",
                  "annotation": [
                    "@Override"
                  ],
                  "access_modifier": "protected",
                  "return_type": "void",
                  "parameter": [
                    {
                      "type": "Bundle",
                      "variable": "savedInstanceState"
                    }
                  ],
                  "lines": [
                    "crashReport = new FireBaseCrashReport();",
                    "crashReport.log(\"Activity Created\");"
                  ]
                },
                {
                  "class": "<main>",
                  "name": "onNavigationItemSelected",
                  "annotation": [
                    "@Override"
                  ],
                  "access_modifier": "public",
                  "return_type": "boolean",
                  "parameter": [
                    {
                      "type": "MenuItem",
                      "variable": "item"
                    }
                  ],
                  "lines": [
                    "if (item.getItemId() == R.id.nav_crash_report) {",
                    "  crashReport.reportError(new Exception(\"My first Android non-fatal error\"));",
                    "}"
                  ]
                }
              ]
            }
          ],
          "gradle_config": [
            {
              "path": "${app}",
              "file": "build.gradle",
              "snippet": [
                {
                  "element": [
                    "dependencies"
                  ],
                  "lines": [
                    "compile 'com.google.firebase:firebase-crash:10.0.1'"
                  ]
                }
              ]
            }
          ]
        }
      ]
    }
  ]
}
